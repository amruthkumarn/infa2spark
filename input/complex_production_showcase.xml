<?xml version="1.0" encoding="UTF-8"?>
<IMX xmlns="http://com.informatica.imx"
     xmlns:project="http://com.informatica.metadata.common.project/2"
     xmlns:folder="http://com.informatica.metadata.common.folder/2"
     xmlns:legacy="http://com.informatica.legacy/1">

    <!-- Project Structure -->
    <project:Project id="PROJECT_1" name="ComplexProductionProject" shared="false">
        <description>Complex production project showcasing reusable transformation classes</description>
        <contents>
            <folder:Folder id="FOLDER_1" name="Mappings">
                <contents>
                    <legacy:TLoaderMapping id="MAPPING_1" name="m_Sales_Processing">
                        <description>Sales data processing with Expression and Aggregator transformations</description>
                        <components>
                            <source name="SRC_Sales_Data" type="HDFS" format="PARQUET"/>
                            <transformation name="EXP_Calculate_Totals" type="Expression"/>
                            <transformation name="AGG_Sales_Summary" type="Aggregator"/>
                            <target name="TGT_Sales_Mart" type="HIVE"/>
                        </components>
                    </legacy:TLoaderMapping>
                    
                    <legacy:TLoaderMapping id="MAPPING_2" name="m_Customer_Integration">
                        <description>Customer data integration with Lookup and SCD transformations</description>
                        <components>
                            <source name="SRC_Customer_File" type="HDFS" format="CSV"/>
                            <transformation name="LKP_Customer_Details" type="Lookup"/>
                            <transformation name="JNR_Customer_Address" type="Joiner"/>
                            <transformation name="SCD_Customer_Dim" type="Java"/>
                            <target name="DIM_Customer" type="HIVE"/>
                        </components>
                    </legacy:TLoaderMapping>
                    
                    <legacy:TLoaderMapping id="MAPPING_3" name="m_Data_Quality_Check">
                        <description>Data quality processing with Router and Union transformations</description>
                        <components>
                            <source name="SRC_Raw_Data" type="ORACLE"/>
                            <transformation name="RTR_Quality_Check" type="Router"/>
                            <transformation name="UNI_Combine_Clean_Data" type="Union"/>
                            <transformation name="SEQ_Generate_Keys" type="Sequence"/>
                            <transformation name="SRT_Sort_Records" type="Sorter"/>
                            <target name="TGT_Clean_Data" type="HIVE"/>
                        </components>
                    </legacy:TLoaderMapping>
                </contents>
            </folder:Folder>
        </contents>
    </project:Project>
</IMX>